@model List<CodingEvents.Models.EventCategory>

<h1>Event Categories</h1>

@if (Model.Count == 0)
{
    <p>No Event Categories yet!!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Event ID</th>
                <th scope="col">Event Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (EventCategory category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                </tr>
            }
        </tbody>
    </table>
}