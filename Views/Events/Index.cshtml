@model List<CodingEvents.Models.Event>

<link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
<script src="~/js/Custom.js"></script>
<img src="~/images/testimage.png"/>

<h1>Coding Events:</h1>

<p>
    <a asp-controller="events" asp-action="Add">Add Event</a>
</p>

@if (Model.Count == 0)
    {
        <p>No Events yet!!</p>
    } else {
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Contact Email</th>
                <th scope="col">Category</th>
                <th scope="col">Address</th>
                <th scope="col">Attendees</th>
                <th scope="col">RSVP</th>
                <th scope="col">Edit Link</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Event events in Model)
            {
            <tr>
                <td>@events.Id</td>
                <td><a asp-controller="Events" asp-action="Detail" asp-route-id="@events.Id">@events.Name</a></td>
                <td>@events.Description</td>
                <td>@events.ContactEmail</td>
                <td>@events.Category.Name</td>
                <td>@events.Address</td>
                <td>@events.Attendees</td>
                <td>@events.RSVP</td>
                <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@events.Id">Edit Event @events.Id</a></td>
            </tr>
            }
        </tbody>
    </table>
}

<partial name="/Views/Shared/_LinkListPartial.cshtml"/>