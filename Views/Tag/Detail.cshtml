@model List<CodingEvents.Models.EventTag>

@if (Model.Count == 0)
{
<h1>There are no Events with the selected Tag: #@Model[0].Tag.Name</h1>
}
else
{
    <h1>Events Tagged: #@Model[0].Tag.Name</h1>

    <ul>
        @foreach (EventTag eventTag in Model)
        {
            <li><a asp-controller="Events" asp-action="Detail" asp-route-id="@eventTag.Event.Id">@eventTag.Event.Name</a></li>
        }
    </ul>
}